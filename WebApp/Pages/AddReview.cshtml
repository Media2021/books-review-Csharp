        <div class="new-container1">
        <form method="POST" id="my-form1">
            
                <h1>Add review</h1>              

                <div>
                   
                
                <input asp-for="reviewDTO.Id" type="text" value="@Model.book.Id" id="id" placeholder="@Model.book.Id">
                <span asp-validation-for="reviewDTO.Id"></span>

                </div>
                <div>

              
                <input asp-for="reviewDTO.Title" type="text" value="@Model.book.Title" id="Password" placeholder="@Model.book.Title">
                <span asp-validation-for="reviewDTO.Title"></span>
                    

                </div>
                <div>
                 
                <input asp-for="reviewDTO.User1" type="text" value="@User.Identity.Name" id="username" placeholder="@User.Identity.Name">
                <span asp-validation-for="reviewDTO.User1"></span>
                </div>
                <div>
                   
                    <textarea asp-for="reviewDTO.AddReview" type="text" class="AddReview" placeholder="Your review"  > 

                    </textarea>

                    <span asp-validation-for="reviewDTO.AddReview"></span>

                </div>
               
                <input class="btn1" type="submit" value="Add review"> 

        </form>
         

            <p> @ViewData["Message"]</p>
            @section Scripts {
                <partial name="_ValidationScriptsPartial" />
                              }
 
        </div>


