@page
@model WebApp.Pages.EditMyReviewModel
@{
    Layout = "_Layout";

}
<link rel="stylesheet" href="~/css/main.css">

<div class="countainer">
    <table method="GET" class="table">
        <tr>

            <th>Review id</th>
            <th>Book id</th>
            <th>Book Title</th>
            <th>User</th>
            <th>Review</th>
            <th>Date</th>
            <th>Update/Delete</th>



        </tr>
        @{

            foreach (var item in @Model.reviewDTO)
            {
                <tr>
                    <td> @item.ReviewId</td>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.User1</td>
                    <td>@item.AddReview</td>
                    <td>@item.Date</td>
                    <td> <a href="/ApplyEditReview?id=@item.ReviewId"><em>Edit</em></a>
                     <a href="/DeleteReview?id=@item.ReviewId"><em>Delete</em></a> </td>

                </tr>
            }
        }
        @*



        *@

    </table>
</div>