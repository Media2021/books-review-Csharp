@page
@model WebApp.Pages.SignInModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/signIn.css">
    <title>Sign In</title>
</head>
<body>

    <header id="main-header">
        <div class="container">
            <h1>Read To Heal</h1>
        </div>
    </header>
    <nav id="navbar">
        <div class="container">
            <ul>
                <li><a href="#">About us</a></li>
                <li><a asp-page="/MainHTML">Home</a></li>
                <li><a href="#">Services</a></li>
                <li><a href="#">Contact</a></li>

            </ul>
        </div>
    </nav>
    <section id="showcase">
        <div class="new-container">
            <form method="POST" id="my-form">
                <h1>Sign in</h1>

                <div>
                   
                    <input asp-for="Person.Name" type="text" id="username" placeholder="Enter your username">
                    <span asp-validation-for="Person.Name"></span>
                </div>
                <div>
                 
                    <input asp-for="Person.Password" type="password" id="Password" placeholder="Enter your password">
                    <span asp-validation-for="Person.Password"></span>
                </div>

                <input class="btn1" type="submit" value="Submit">
                <button class="btn2"><a asp-page="/SignUp">Sign Up ?</a></button>
            </form>
           
            @section Scripts {
                <partial name="_ValidationScriptsPartial" />
 }
        </div>
     
    </section>




    <section class="new-container">
    </section>


    <footer id="main-footer">
        <p>Copyright & Privacy; 2022 Media</p>
    </footer>
</body>
</html>
