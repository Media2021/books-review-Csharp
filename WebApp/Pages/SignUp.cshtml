






@page
@model WebApp.Pages.SignUpModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/signUp.css">
    <title>Sign Up</title>
</head>
<body>

    <header id="main-header">
        <div class="container">
            <h1>Read To Heal</h1>
        </div>
    </header>
    <nav id="navbar">
        <div class="container">
            <ul>
                <li><a asp-page="/SignIn">Sign in</a></li>
                <li><a asp-page="/MainHTML">Home</a></li>
                <li><a href="#">Services</a></li>
                <li><a href="#">Contact</a></li>

            </ul>
        </div>
    </nav>

    <section id="showcase">
        <div class="new-container1">
            <form  method="POST"id="my-form1">
                <h1>Sign Up</h1>

             
                <div>
                  
                    <input asp-for="Person.ID" type="text" id="ID" placeholder="ID">
                    <span asp-validation-for="Person.ID"></span>
                </div>   
                <div>
                 
                    <input asp-for="Person.Name"  type="text" id="name" placeholder="Name">
                    <span asp-validation-for="Person.Name"></span>

                </div>
                <div>
                  
                    <input asp-for="Person.Password" type="text" id="Password" placeholder="Password">
                    <span asp-validation-for="Person.Password"></span>

                </div>

                <input class="btn1" type="submit" value="Submit">
            </form>
                <p> @ViewData["Message"]</p>
            @section Scripts {
                <partial name="_ValidationScriptsPartial" />}
        </div>
    </section>



    <footer id="main-footer">
        <p>Copyright & Privacy; 2022 Media</p>
    </footer>
</body>
</html>